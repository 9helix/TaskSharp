<Page x:Class="SideBar_Nav.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SideBar_Nav.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bilješke" Loaded="Notes_Loaded" Unloaded="Notes_Unloaded">
 <Page.Resources>
    <DataTemplate x:Key="NotesTemplate">
        <Border Name="border" BorderBrush="LightSkyBlue" BorderThickness="1" Padding="1" Margin="2">
            <ListBoxItem>
                <StackPanel Orientation="Vertical">
                        <Grid Margin="0,5,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontSize="20px" Text="uzrurz" />
                            <TextBlock Grid.Column="1" Text="{Binding Path=CreationDate}"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*" />
                                <ColumnDefinition Width=".5*" />
                                <ColumnDefinition Width=".5*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Foreground="DarkGray" Text="{Binding Path=Tags}" />
                            <Image Grid.Column="1" Source="../Resources/Images/delete.png" Width="15" Cursor="Hand" />
                            <Image Grid.Column="2" Source="../Resources/Images/edit.png" Width="15" Cursor="Hand" PreviewMouseDown="OpenEditor"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Path=Content}" />
                        </Grid>
                </StackPanel>
            </ListBoxItem>
        </Border>
    </DataTemplate>
</Page.Resources>

    <Grid Background="White">
        <StackPanel HorizontalAlignment="center" Margin="70,0,0,0">
            <TextBlock FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,15,0,0">Bilješke</TextBlock>

            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="15" HorizontalAlignment="Center" Margin="0,30,0,0">
                    Pozdrav
                </TextBlock>
                <Separator Width="5" Background="Transparent"></Separator>
                <TextBlock FontSize="15" x:Name="UsernameField" HorizontalAlignment="Center" Margin="0,30,0,0" FontWeight="Bold" />
                <TextBlock FontSize="15" HorizontalAlignment="Center" Margin="0,30,0,0">
                    , ovdje možete vidjeti sve svoje bilješke.
                </TextBlock>
            </StackPanel>

            <ListBox Width="450" BorderThickness="0" Margin="0,20,0,0" x:Name="NotesContainer" HorizontalContentAlignment="Stretch"
                Visibility="Visible" ItemTemplate="{StaticResource NotesTemplate}"/>

            <StackPanel Name="NotesEmpty" Visibility="Collapsed">
                <TextBlock Foreground="DarkGray" FontSize="15">
                    Izgleda da niste unijeli nijednu bilješku...
                </TextBlock>
                <TextBlock Foreground="DarkGray" FontSize="15">
                    Bez brige, to možete ispraviti klikom na gumb "+ dodaj novo".
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
